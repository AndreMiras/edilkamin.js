{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ES6", "DOM"],
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true
  },
  "include": ["src/**/*.ts", "package.json"]
}
